
   <%-include('partials/header')%>
   <h2 class="text-white text-center">Update Student</h2>
  <form action="/update/<%=user._id%>" method="post" class="col-md-4 mx-auto">
  <div class="form-row">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" value="<%= user.name %>">
    </div>
    <div class="form-group mt-3">
      <label for="gender">Gender</label>
      <input type="text" class="form-control" name="gender" value="<%= user.gender %>">
    </div>

       <div class="form-group mt-3">
      <label for="name">DOB</label>
      <input type="date" class="form-control" name="age" value="<%= user.age %>">
    </div>
    <div class="form-group mt-3">
      <label for="gender">Mobile</label>
      <input type="text" class="form-control" name="mobile" value="<%= user.mobile %>">
    </div>
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-success mt-3 mx-2">Save</button>
  <a href="/" class="btn btn-warning mt-3 mx-2">Cancel</a>
  </div>
</form>
<%-include('partials/footer')%>
